<Window x:Class="ZabavniParkKitKat.View.MenagerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MenagerView" Height="346.269" Width="541.791">
    <Grid>
        <ListBox HorizontalAlignment="Left" Height="233" VerticalAlignment="Top" Width="261" Margin="10,10,0,0" ItemsSource="{Binding Path=Zahtjevi}" SelectedItem="{Binding Path=Odabrani}"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Path=Odabrani.Obrazlozenje}" VerticalAlignment="Top" Margin="306,43,0,0"/>
        <Label Content="Obrazlozenje:&#xD;&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="298,10,0,0" Height="28"/>
        <Button Content="Prihvati" HorizontalAlignment="Left" VerticalAlignment="Top" Width="128" Margin="10,258,0,0" Command="{Binding Path=Prihvati}"/>
        <Button Content="Odbij" HorizontalAlignment="Left" VerticalAlignment="Top" Width="128" Margin="143,258,0,0" Command="{Binding Path=Odbij}"/>

    </Grid>
</Window>
